@model Pie
@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img src="@Model.ImageUrl" alt="@Model.Name" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price.ToString("c")</h3>
        <h3>@Model.Name</h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
    </div>
</div>
